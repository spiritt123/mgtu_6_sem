% Установка заголовков отчета по НИР
\newcommand{\titlepageresearchtitle}[1]
{
	{
		\LARGE \bfseries
		ОТЧЕТ \\
	}
	\vspace{5mm}
	{
		\Large \itshape
		ПО НАУЧНО-ИССЛЕДОВАТЕЛЬСКОЙ РАБОТЕ \\
		\vspace{5mm}
